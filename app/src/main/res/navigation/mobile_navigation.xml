<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_map">

    <fragment
        android:id="@+id/navigation_map"
        android:name="net.lmlab.m_tsunami_android.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_alerts" />

    <fragment
        android:id="@+id/navigation_hinata"
        android:name="net.lmlab.m_tsunami_android.ui.hinata.HinataFragment"
        android:label="@string/title_hinata"
        tools:layout="@layout/fragment_hinata" />

    <fragment
        android:id="@+id/navigation_alerts"
        android:name="net.lmlab.m_tsunami_android.ui.alerts.AlertsFragment"
        android:label="@string/title_alerts"
        tools:layout="@layout/fragment_alerts" />

    <fragment
        android:id="@+id/navigation_info"
        android:name="net.lmlab.m_tsunami_android.ui.info.InfoFragment"
        android:label="@string/title_info"
        tools:layout="@layout/fragment_info" />

